<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/default_margin">

    <TextView
        android:id="@+id/tv_dialog_save_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/tv_dialog_congrats"
        style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
        />

    <EditText
        android:id="@+id/et_dialog_save_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dialog_save_score"
        android:hint="@string/et_hint_your_name"/>

</RelativeLayout>